generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String    @id @default(uuid())
  name        String  
  description String   
  price       Float    
  stock       Int    
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String  
  images      String[] 
  colors      String[]  
  sizes       String[] 
  discountCode String? 
  comments    Comment[] 
  createdAt   DateTime @default(now()) 
  updatedAt   DateTime @updatedAt   
}

model Comment {
  id        String   @id @default(uuid())
  content   String   
  rating    Int     
  product   Product  @relation(fields: [productId], references: [id]) 
  productId String   
  createdAt DateTime @default(now()) 
}

model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  products  Product[]
}
